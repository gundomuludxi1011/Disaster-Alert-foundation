@page
@model DisasterAlert.Pages.DonateDisasterGoodsModel
@{
}

<h1>Active disaster donation</h1>

@if (Model.hasData)
{
    <p>Greetings @Model.fullName </p>
    <p>We have received goods donations @Model.goodsdonated </p>
    <p>thanks for your kindness, come back again... </p>
}
<div class="container">
    <form method="POST">
        <label for="fname">Donor names:</label><br>
        <input type="text" id="fname" name="fullname"><br>

        <label for="goods">Goods:</label><br>
        <input type="text" id="goods" name="goodsdonated"><br>

        <label for="disaster">Disaster name:</label><br>
        <input type="text" id="disaster" name="disasterdetails"><br>

        <label for="message">Message:</label><br>
        <textarea id="message" name="message" style="height:195px"></textarea><br>


    </form>
</div>